<?xml version="1.0"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<EntityComponents>

		<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
			<Id>
				<TypeId>Inventory</TypeId>
				<SubtypeId>Trigger-StationAssistDirect-Frigate-Space</SubtypeId>
			</Id>
			<Description>

			[RivalAI Trigger]

			[UseTrigger:true]
			[Type:CommandReceived]
			[CommandReceiveCode:StationDamage]

			[StartsReady:true]
			[MaxActions:1]
			[Actions:Action-StationAssistDirect-Frigate-Space]

			</Description>

		</EntityComponent>

		<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
			<Id>
				<TypeId>Inventory</TypeId>
				<SubtypeId>Action-StationAssistDirect-Frigate-Space</SubtypeId>
			</Id>
			<Description>

			[RivalAI Action]

			[UseChatBroadcast:true]
			[ChatData:Chat-StationAssistDirect-Frigate-Space]

			[ChangeBehaviorSubclass:true]
			[NewBehaviorSubclass:HorseFighter]

			[ChangeAutopilotProfile:true]
			[AutopilotProfile:Tertiary]

			[InheritLastAttackerFromCommand:true]
			[SwitchTargetToDamager:true]

			</Description>

		</EntityComponent>

		<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
			<Id>
				<TypeId>Inventory</TypeId>
				<SubtypeId>Chat-StationAssistDirect-Frigate-Space</SubtypeId>
			</Id>
			<Description>

			[RivalAI Chat]

			[UseChat:true]
			[StartsReady:true]
			[MaxChats:-1]
			[BroadcastRandomly:true]
			[IgnoreAntennaRequirement:true] 
			[IgnoredAntennaRangeOverride:9000]
      
			[Author:{GridName}]
			[Color:Red]

			[ChatMessages: This is {GridName}. Distress call acknowledged, enroute to provide support.]
			[ChatAudio:None]
			[BroadcastChatType:Chat]

			[ChatMessages:{GridName} responding to distress call.]
			[ChatAudio:None]
			[BroadcastChatType:Chat]

			</Description>
		</EntityComponent>

	</EntityComponents>
</Definitions>